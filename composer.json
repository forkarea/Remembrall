{
	"description": "Remembrall sends emails about changes on pages",
	"homepage": "https://github.com/klapuch/remembrall",
	"type": "project",
	"authors": [
		{
			"name": "Dominik Klapuch",
			"email": "klapuchdominik@gmail.com",
			"homepage": "https://www.github.com/klapuch",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.1",
		"ext-mbstring": "*",
		"ext-dom": "*",
		"nette/caching": "^2.5.0",
		"nette/mail": "^2.4.0",
		"klapuch/encryption": "^1.0.0",
		"klapuch/access": "^2.0.0",
		"klapuch/storage": "^2.0.0",
		"klapuch/output": "^1.0.0",
		"klapuch/ini": "^1.0.0",
		"klapuch/uri": "^1.0.0",
		"klapuch/time": "^2.0.0",
		"klapuch/http": "^1.0.0",
		"klapuch/log": "^1.0.0",
		"klapuch/flash-message": "^1.0.0",
		"klapuch/csrf": "^1.0.0",
		"klapuch/form": "^3.0.0",
		"klapuch/validation": "^2.0.0"
	},
	"require-dev": {
		"nette/tester": "^1.7",
		"mockery/mockery": "@dev",
		"consistence/coding-standard": "^0.12.0",
		"phpstan/phpstan": "^0.5.0",
		"jakub-onderka/php-parallel-lint": "^0.9.2",
		"slevomat/coding-standard": "^1.1",
		"sebastian/phpcpd": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"Remembrall\\": [
				"App/"
			]
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Remembrall\\": [
				"Tests/"
			]
		}
	},
	"scripts": {
		"lint": "parallel-lint -e php,phpt App Tests",
		"phpcpd": "phpcpd App",
		"phpstan": "phpstan analyze -l 5 -c phpstan.neon App Tests",
		"phpcs": "phpcs --standard=ruleset.xml --extensions=php,phpt --encoding=utf-8 --tab-width=4 -sp App",
		"test": "tester -o console -s -p php -c Tests/php.ini Tests/",
		"test-cgi": "tester -o console -s -p php-cgi -c Tests/php.ini Tests/",
		"bfc": [
			"@composer update",
			"@lint",
			"@phpcpd",
			"@phpstan",
			"@phpcs",
			"@test",
			"@test-cgi"
		]
	}
}
